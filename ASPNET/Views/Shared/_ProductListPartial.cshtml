@model IEnumerable<ASPNET.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista Produktów</h2>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <div class="container">
          <div class="row justify-content-center">
              @foreach(var product in Model){
                <div class=" col-md-3 border rounded-lg shadow-5 m-1">
                    <div class="justify-content-center">@product.ProductName</div>
                    <div class="justify-content-center">@product.Amount</div>
                    <div class="justify-content-center">@product.ProductType.Name</div>
                </div>
             }
             </div>
       </div>
    }
    else
    {
        <p>Nie utworzono jeszcze żadnego produktu.</p>
    }
</div>