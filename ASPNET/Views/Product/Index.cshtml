@model IEnumerable<ASPNET.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista Produktów</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Stwórz nowy produkt</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Produkt
                    </th>
                    <th>
                        Stan
                    </th>
                    <th>
                        Kategoria produktu
                    </th>
                    <th>
                        Zmiany
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var product in Model)
                {
                <tr>
                    <td width="25%">@product.ProductName</td>
                    <td width="25%">@product.Amount</td>
                    <td width="25%">@product.ProductType.Name</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Update" asp-route-Id="@product.Id" class="btn btn-primary mx-1">Zmień</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger mx-1">Usuń</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table> 
    }
    else
    {
        <p>Nie utworzono jeszcze żadnego produktu.</p>
    }

</div>

